@model Contact

@{
    ViewData["Title"] = "Détails de " + Model.Fullname;
}

<div class="row">
    <div class="col-md-8 offset-2">
         <h2>Détails de @Model.Fullname</h2>
        <br />
            <div class="form-group text-center">
                <img class="rounded-circle" style="max-width: 250px" src="~/@Model.Avatar.AvatarPath" alt="@Model.Fullname"/>
            </div>
            <div class="form-group">
                <label asp-for="Firstname" class="control-label"></label>
                <input asp-for="Firstname" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="control-label"></label>
                <input asp-for="Lastname" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly/>
            </div>
            <br />
            <div class="form-group">
                <a class="btn btn-outline-warning float-end" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil-square"></i> Editer</a>
                <a class="btn btn-outline-info" asp-action="Index">Voir tous</a>
            </div>
    </div>
</div>