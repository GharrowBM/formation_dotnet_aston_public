@model List<Dog>

@{
    ViewData["Title"] = "Liste des chiens";
}

<div class="row">
    <h3>Liste des chiens</h3>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Id.</th>
                <th>Nom</th>
                <th>Couleur du collier</th>
                <th>Age</th>
                <th>Maître</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CollarColor</td>
                    <td>@item.Age</td>
                    <td>@item.Master.Firstname @item.Master.Lastname</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info">Editer</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    <a class="btn btn-success float"asp-action="Create">Nouveau chien</a>
</div>
