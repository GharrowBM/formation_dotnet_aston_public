<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C07_Xamarin.Pages.AddAddressPage">

    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label Text="Ajouter une adresse"
                   Style="{StaticResource H1Label}"/>
            <Entry x:Name="addressStreetNumberEntry"
                   Placeholder="Numero de rue"
                   Keyboard="Numeric"/>
            <Entry x:Name="addressStreetNameEntry"
                   Placeholder="Nom de rue"/>
            <Entry x:Name="addressPostalCodeEntry"
                   Placeholder="Code Postal"
                   Keyboard="Numeric"/>
            <Entry x:Name="addressCityNameEntry"
                   Placeholder="Nom de commune"/>
            <Button x:Name="addAddressButton"
                    Margin="0,10"
                    HorizontalOptions="Center"
                    Text="Save"
                    Clicked="addAddressButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>