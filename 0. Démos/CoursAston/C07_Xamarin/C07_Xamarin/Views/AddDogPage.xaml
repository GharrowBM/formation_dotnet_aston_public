<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C07_Xamarin.Pages.AddDogPage">

    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label Text="Ajouter un chien"
                   Style="{StaticResource H1Label}"/>
            <Entry x:Name="dogNameEntry"
                   Placeholder="Nom du chien"/>
            <Entry x:Name="dogDescEntry"
                   Placeholder="Description du chien"/>
            <Picker x:Name="collarColorPicker"/>
            <Picker x:Name="masterPicker"/>
            <Button x:Name="addDogButton"
                    Margin="0,10"
                    HorizontalOptions="Center"
                    Text="Save"
                    Clicked="addDogButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>