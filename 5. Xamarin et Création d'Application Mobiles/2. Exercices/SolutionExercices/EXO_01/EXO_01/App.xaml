<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EXO_01.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="colorBlue01">#4A419C</Color>
            <Color x:Key="textColor01">#C2A9E8</Color>
            <Color x:Key="bgColorDark01">#32313A</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource colorBlue01}"/>
                <Setter Property="BackgroundColor" Value="{StaticResource bgColorDark01}"/>
            </Style>

            <Style TargetType="Entry" x:Key="mainEntry">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="PlaceholderColor" Value="White"/>
            </Style>
            
            <Style TargetType="Button" x:Key="mainButton">
                <Setter Property="BackgroundColor" Value="{StaticResource colorBlue01}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="Padding" Value="5"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>