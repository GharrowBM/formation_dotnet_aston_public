<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EXO_02.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="textCol01">#F0C0B4</Color>
            <Color x:Key="textCol02">White</Color>
            <Color x:Key="backgroundMain">#353535</Color>
            <Color x:Key="mainColor01">#EA743D</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BackgroundColor" Value="{StaticResource backgroundMain}"/>
                <Setter Property="BarBackgroundColor" Value="{StaticResource mainColor01}"/>
            </Style>

            <Style TargetType="Button" x:Key="mainButton">
                <Setter Property="BackgroundColor" Value="{StaticResource mainColor01}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="Padding" Value="5"/>
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>